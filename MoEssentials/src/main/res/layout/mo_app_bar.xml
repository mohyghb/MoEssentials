<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.appbar.AppBarLayout android:id="@+id/mo_appbar_appbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mo_app_bar_height"
    android:background="@color/setting_toolbar_background"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/mo_appbar_collapsing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentScrim="@color/setting_toolbar_background"
        app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed|exitUntilCollapsed"
        app:toolbarId="@+id/mo_appbar_toolbar"
        app:titleEnabled="false">


        <include
            layout="@layout/mo_title_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mo_appbar_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp">

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>